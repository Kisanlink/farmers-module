# Service Configuration
SERVICE_NAME=farmers-module
SERVICE_PORT=8000
GATEWAY_PORT=8081
ENVIRONMENT=development

# Database Configuration (consistent with kisanlink-db)
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=postgres
DB_POSTGRES_PASSWORD=postgres
DB_POSTGRES_DBNAME=farmers_module
DB_POSTGRES_SSLMODE=disable
DB_POSTGRES_MAX_CONNS=10

# AAA Service Configuration
AAA_ENABLED=true
AAA_GRPC_ADDR=localhost:50051
AAA_API_KEY=your-api-key-here
AUTHZ_CACHE_TTL=30s
AAA_RETRY_ATTEMPTS=3
AAA_RETRY_BACKOFF=100ms
AAA_REQUEST_TIMEOUT=5s

# Observability Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
LOG_LEVEL=info
ENABLE_TRACING=true
ENABLE_METRICS=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=false

# PostGIS Configuration
POSTGIS_SRID=4326
